
<h1 class="new_note_header">create a new note.</h1>


<%= form_for @note do |f|  %> 
	<div id="deckSet">
	<br>
		<div id= "deck_select">
			<%= f.select :deck_id, options_from_collection_for_select(@decks, 'id', 'title', :selected => @note.deck_id), :include_blank => true, :prompt => 'select an existing deck' %> or
			<span><a href="javascript:;" id="addNewDeck">add a new deck.</a></span>
		</div>
			
	</div>
	
	<br>

	
	<%= f.text_area :question, :placeholder => 'Question', :rows => '12', :cols => '220' %>
	<br>
	<div class="row"><div class="col-xs-1"></div><hr class="col-xs-9"style="border-top: dashed 3px;"/></div>
	
	<%= f.text_area :answer, :placeholder => "Answer", :rows => '12', :cols => '220'%> 
	<br>
	
	
	<div class="row">
	<div class="col-xs-3"></div>
	<div class="submit col-xs-6 btn"><%= f.submit "Create"%></div>
	</div>
<%end%>

	

<div class="hide" id="new_decks_form">
  <%= render partial: "deck_field", locals: {note: false} %>
</div>